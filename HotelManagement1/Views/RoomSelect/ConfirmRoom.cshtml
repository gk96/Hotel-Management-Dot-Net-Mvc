        $("#startdate").datepicker({
            minDate: 0
        });
        $("#enddate").datepicker({
            minDate: 0,
            onSelect: function () {
                myfunc();
            }
        });

        function myfunc() {
            var start = $("#startdate").datepicker("getDate");
            var end = $("#enddate").datepicker("getDate");
            days = (end - start) / (1000 * 60 * 60 * 24);
            $("#total").val(Math.round(days) * $("#Price").val());
        }
    </script>
